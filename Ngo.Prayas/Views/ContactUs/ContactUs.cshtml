@model Ngo.Prayas.ViewModels.ContactViewModel

@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ContactUs"))
{
    @Html.AntiForgeryToken()

    <section class="page-title" style="background-image:url(/StaticFiles/images/background/5.jpg);">
        <div class="auto-container">
            <div class="inner-box">
                <h1>contact</h1>
                <ul class="bread-crumb">
                    <li><a href="index.html">Home</a></li>
                    <li>contact</li>
                </ul>
            </div>
        </div>
    </section>

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!--Contact Section-->
    <section class="contact-section">
        <div class="auto-container">

            <div class="contact-info">
                <div class="row clearfix">

                    <div class="info-block col-md-4 col-sm-6 col-xs-12">
                        <div class="inner-box">
                            <div class="icon-box"><span class="flaticon-house-outline"></span></div>
                            <h4>VISIT</h4>
                            Collins Street West,121 <br> King Street, Melbourne.
                        </div>
                    </div>

                    <div class="info-block col-md-4 col-sm-6 col-xs-12">
                        <div class="inner-box">
                            <div class="icon-box"><span class="flaticon-technology-1"></span></div>
                            <h4>Call</h4>
                            (1800) 123 4567 <br> (1800) 123 4568
                        </div>
                    </div>

                    <div class="info-block col-md-4 col-sm-6 col-xs-12">
                        <div class="inner-box">
                            <div class="icon-box"><span class="flaticon-envelope-1"></span></div>
                            <h4>Mail</h4>
                            info@ngoprayas.com
                        </div>
                    </div>

                </div>
            </div>

            <h2>Say Hello</h2>

            <!--Contact Form-->
            <div class="contact-form">
                <form method="post" asp-action="ContactUs" id="contact-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <hr />
                    <div class="row clearfix">
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.EmailId, new { placeholder = "Email", @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                            @*<input type="text" asp-for="EmailId" name="EmailId" placeholder="Email *" />
                                <span asp-validation-for="EmailId" class="text-danger"></span>*@
                        </div>
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.MobileNumber, new { placeholder = "Contact-Number", @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })
                            @*<input type="text" asp-for="MobileNumber" name="MobileNumber" value="" placeholder="Phone *" required>
                                <span asp-validation-for="MobileNumber" class="text-danger"></span>*@
                        </div>

                        <div class="column col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                @Html.TextAreaFor(model => model.Description, new { placeholder = "Description", @class = "form-control", autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                @*<textarea name="Description" placeholder="Description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>*@
                            </div>
                        </div>

                        <div class="column col-md-12 col-sm-12 col-xs-12 text-center">
                            <div class="form-group">
                                <button type="submit" class="theme-btn btn-style-one">Submit Now</button>
                            </div>
                        </div>

                    </div>

                </form>
            </div>
            <!--End Contact Form-->

        </div>
    </section>
    <!--End Contact Section-->
    <!--Map Section-->


}


